{
  "name": "next-js-example",
  "private": true,
  "scripts": {
    "dev": "node ./server",
    "dev:coverage": "cross-env CYPRESS_coverage=true npm run dev",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint **/*.{ts,tsx,js,jsx}",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "run-p --print-label typecheck eslint",
    "test:unit:base": "cypress open --config integrationFolder=./src",
    "test:unit": "cross-env CYPRESS_coverage=false npm run test:unit:base",
    "test:unit:coverage": "cross-env CYPRESS_coverage=true npm run test:unit:base",
    "test:e2e:base": "cypress open --config baseUrl=http://localhost:3000",
    "test:e2e": "cross-env CYPRESS_coverage=false npm run test:e2e:base",
    "test:e2e:coverage": "cross-env CYPRESS_coverage=true npm run test:e2e:base",
    "test:all:base": "cypress open --config baseUrl=http://localhost:3000,integrationFolder=./,testFiles={cypress/integration/**/*.cspec.*,src/**/*.cspec.*}",
    "test:all": "cross-env CYPRESS_coverage=false npm run test:all:base",
    "test:all:coverage": "cross-env CYPRESS_coverage=true npm run test:all:base",
    "test:ci:base": "cross-env CYPRESS_coverage=true cypress run --browser chrome --headless",
    "test:ci:unit": "cross-env CYPRESS_integrationFolder=./src npm run test:ci:base",
    "test:ci:e2e": "cross-env CYPRESS_baseUrl=http://localhost:3001 npm run test:ci:base",
    "test:ci:all": "cross-env CYPRESS_baseUrl=http://localhost:3001 CYPRESS_integrationFolder=./ CYPRESS_testFiles=\"{cypress/integration/**/*.cspec.*,src/**/*.cspec.*}\" npm run test:ci:base",
    "ci:test:e2e": "run-p --print-label --race serve test:ci:e2e",
    "ci:test:all": "run-p --print-label --race serve test:ci:all",
    "ci": "run-p lint ci:test:all",
    "build": "next build && next export",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:coverage": "cross-env CYPRESS_coverage=true npm run build",
    "start": "cross-env NODE_ENV=production PORT=3001 node ./server",
    "serve": "cross-env NODE_ENV=build PORT=3001 node ./server"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "axios": "^0.19.2",
    "next": "^9.3.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.7.0",
    "@cypress/webpack-preprocessor": "^5.1.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@next/bundle-analyzer": "^9.3.6",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "cypress": "^4.5.0",
    "cypress-react-unit-test": "^4.1.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.3",
    "https-proxy-agent": "^5.0.0",
    "husky": "^4.2.5",
    "istanbul-lib-coverage": "^3.0.0",
    "lint-staged": "^10.2.2",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --ignore-path ./.eslintignore --write"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.*spec.*"
    ]
  }
}
